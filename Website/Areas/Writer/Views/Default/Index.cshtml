@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Konu</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            if (item.Status == "deneme")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Status == "Yeterli")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Status == "Yeni Yazı")
                            {
                                color = "badge badge-success";
                            }
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writer/Default/DetailsAnnouncement/@item.Id" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>