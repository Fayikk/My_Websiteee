@using EntityLayer.Concrete
@model List<WriterMessage>


<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Son Mesajlar</h6>
    
    @foreach (var item in Model)
   {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item"  href="/AdminMessage/AdminMessageDetails/@item.WriterMessageId">
            <div class="preview-thumbnail">
                <img src="../../assets/images/faces/face4.jpg" alt="image" class="rounded-circle profile-pic">
            </div>
            <div class="preview-item-content">
                <p class="preview-subject ellipsis mb-1">@item.SenderName bir mesajı var</p>
                <p class="text-muted mb-0">@item.Date.ToString("dd/mmm/yyyy") </p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    <p class="p-3 mb-0 text-center">@ViewBag.v</p>
</div>

