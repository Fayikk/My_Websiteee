@model EntityLayer.Concrete.Experience



@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3>
        Deneyim Ekleme Sayfası
    </h3>
</div>
@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    <br />

    @Html.Label("Deneyim Başlığı")
    @Html.TextBoxFor(x=>x.Name,new {@class = "form-control"})
    <br />
    <label>Tarih Bilgisi</label>
    @Html.TextBoxFor(x=>x.Date,new {@class = "form-control"})
    <br />
    <label>Resim Yolu</label>

    @Html.TextBoxFor(x=>x.ImageUrl,new {@class = "form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x=>x.Description,new {@class = "form-control"})
    <br />

    <button class="btn btn-success">Kaydet</button>


}
