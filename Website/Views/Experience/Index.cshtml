@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Listesi</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık Bilgisi</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceId</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>


                                <td><a href="/Experience/Delete/@item.ExperienceId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-primary">Güncelle</a></td>

                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Experience/AddExperience/"  class="btn btn-outline-info">Yeni Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>